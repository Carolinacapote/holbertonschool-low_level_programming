CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY : all
all: m.h $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

.PHONY : clean
clean:
	$(RM) -f *~ $(NAME)

.PHONY : oclean
oclean:
	$(RM) -f $(OBJ)

.PHONY : fclean
fclean:
	$(RM) -f *~ $(NAME) $(OBJ)

.PHONY : re
re: oclean all
